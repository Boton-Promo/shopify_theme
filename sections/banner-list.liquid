{{ 'banner-list.css' | asset_url | stylesheet_tag }}

<style>
    #shopify-section-{{ section.id }} {
      --heading-color: {{ section.settings.heading_color | color_extract: 'red' }}, {{ section.settings.heading_color | color_extract: 'green' }}, {{ section.settings.heading_color | color_extract: 'blue' }};
      --ap-nextap-buttonprev-color: 67, 70, 78;
      --ap-productlist-column-gap: 10px;
    }

    @media screen and (max-width: 575px) {
      #shopify-section-{{ section.id }} .ap-productlist__inner--scroller {
        margin:0;
        padding:0px;
        --section-products-per-row: {{ section.settings.products_per_row_mobile }};
        grid-auto-columns: calc((100% - var(--ap-productlist-column-gap) * (1 - 1)) / 1);
      }
    }

    @media (min-width:576px) and (max-width: 767px) {
      #shopify-section-{{ section.id }} {
        --section-products-per-row: {{ section.settings.products_per_row_ipad }};
      }
      #shopify-section-{{ section.id }} .ap-productlist__inner--scroller{
        margin:0;
        padding:0px;
        grid-auto-columns:calc((100% - var(--ap-productlist-column-gap) * ({{ section.settings.products_per_row_ipad }} - 1)) / {{ section.settings.products_per_row_ipad }});
      }
 
    }
  
    @media (min-width: 768px) and (max-width: 1199px) {
      #shopify-section-{{ section.id }} {
        --section-products-per-row: {{ section.settings.products_per_row_tablet }}
      }
      #shopify-section-{{ section.id }} .ap-productlist__inner--scroller{
        margin:0;
        padding:0;
        grid-auto-columns:calc((100% - var(--ap-productlist-column-gap) * ({{ section.settings.products_per_row_tablet }} - 1)) / {{ section.settings.products_per_row_tablet }});
      }
    }
    @media screen and (min-width: 1200px) {
      #shopify-section-{{ section.id }} {
        --section-products-per-row: {{ section.settings.products_per_row_desktop }};
      }
      #shopify-section-{{ section.id }} .ap-productlist__inner--scroller{
        margin:0;
        padding:0;
        grid-auto-columns:calc((100% - var(--ap-productlist-column-gap) * ({{ section.settings.products_per_row_desktop }} - 1)) / {{ section.settings.products_per_row_desktop }});
      }
    }

    #shopify-section-{{ section.id }} .banner-carousel-content-text {
      position: absolute;
      top: 20px;
      left: 20px;
      height: 100%;
      width: 100%;
    }
    .banner-carousel-content-text a.button {
      position: absolute;
      bottom: 40px;
      left: 0;
      transition: all .4s;
      opacity: 0;
      visibility: hidden;
    }
    .banner-carousel-content-item:hover .banner-carousel-content-text a.button {
      opacity: 1;
      visibility: visible;
    }
    #shopify-section-{{ section.id }} .h1 ,
    #shopify-section-{{ section.id }} .h2 ,
    #shopify-section-{{ section.id }} .h3 ,
    #shopify-section-{{ section.id }} .h4 ,
    #shopify-section-{{ section.id }} .h5 ,
    #shopify-section-{{ section.id }} .h6 {
      margin: 0;
    }
    #shopify-section-{{ section.id }} .heading-center {
      margin: 0 0 4px;
      line-height: 1.03;
      letter-spacing: -1px;
    }
    #shopify-section-{{ section.id }} .description {
      margin: 0;
      font-size: 16px;
      line-height: 28px;
      font-family: var(--body-font-family);
      text-transform: none;
      font-weight: 400;
    }
    #shopify-section-{{ section.id }} .description-2 {
      margin-bottom: 36px;
      font-size: 20px;
      line-height: 28px;
      font-weight: 600;
    }
    #shopify-section-{{ section.id }} .description-2 span {
      font-size: 40px;
      display: inline-block;
      line-height: 1;
      font-weight: 700;
      color: var(--primary);
    }
    @media (max-width: 480px) {
      #shopify-section-{{ section.id }} .banner-carousel-content-text {
        top: 20px;
        left: 20px;
      }
    }
</style>

{% render 'section-style' %}

<section class="section banner-carousel-section" id="section-{{ section.id }}">
  <div class="{%- if section.settings.fullwidth -%}container-fluid{%- else -%}container{%- endif -%}">
    {% if section.settings.tab_heading != blank %}
    <header class="section__header text-{{ section.settings.text_align }} mb-60">
      <h3 class="heading h{{ section.settings.tab_heading_size }}">{{ section.settings.tab_heading
        }}</h3>
      {% if section.settings.tab_description != blank %}
      <div class="heading-description">
        {{ section.settings.tab_description }}
      </div>
      {% endif %}
      {% if section.settings.btn_text != blank %}
      <div class="btn-more">
        <a href="{{ section.settings.btn_link }}" class="button {{ section.settings.style_btn }}">
          {{ section.settings.btn_text }}
          {% render 'icon-arrow-2' %}
        </a>
      </div>
      {% endif %}
    </header>
    {% endif %}
    <div class="banner-carousel-flex">   
        <banner-carousel stagger-apparition="" class="banner-carousel banner-carousel--center ap-object-loaded">
            <div class="banner-carousel-content">
                <div class="scroller">
                    <div class="ap-productlist__inner ap-productlist__inner--scroller hide-scrollbar">
                        {% for block in section.blocks %}
                            {% case block.type %}
                                {% when 'banner_item' %}
                                    <banner-carousel-item id="block-{{ block.id }}" style="opacity: 1;" reveal="" class="banner-carousel-item has-overlay">
                                        <div class="banner-carousel-box">
                                            <div class="banner-carousel-infor">
                                                <div class="banner-carousel-content-item">
                                                    {% if block.settings.image != blank %}
                                                    <img class="banner-carousel-img" src="{{ block.settings.image | image_url: width: 1920 }}" width="auto" height="auto" loading="lazy" alt="">
                                                    {% else %}
                                                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                                    {% endif %}
                                                    <div class="banner-carousel-content-text">

                                                      {% if block.settings.heading_title != blank %}
                                                      <h3 style="color: {{ block.settings.color_title }}" class="heading heading-title {{ block.settings.heading_size }}">
                                                        {{- block.settings.heading_title -}}
                                                      </h3>
                                                      {% endif %}
                                                      
                                                      {% if block.settings.heading != blank %}
                                                      <h2 style="color: {{ block.settings.color_title_center }}" class="heading heading-center {{ block.settings.heading_size_2 }}">
                                                          <span>
                                                              {{- block.settings.heading -}}
                                                          </span>
                                                      </h2>
                                                      {% endif %}   
                            
                                                      {% if block.settings.description != blank %}
                                                      <p style="color: {{ block.settings.color_description }}" class="heading description">
                                                          <span>
                                                            {{- block.settings.description -}}
                                                          </span>   
                                                          {% if block.settings.description_2 != blank %}
                                                          <span class="d-block description-2">
                                                            {{- block.settings.description_2 -}}
                                                          </span>
                                                          {% endif %}
                                                      </p>
                                                      {% endif %}

                                                      {% if block.settings.button1_label != blank %}
                                                      <style>
                                                        #block-{{ block.id }} a.button.btn-base, 
                                                        #block-{{ block.id }} .btn-outline, 
                                                        #block-{{ block.id }} .btn-line ,
                                                        #block-{{ block.id }} .btn-line-black ,
                                                        #block-{{ block.id }} .btn-base {
                                                          color: {{ block.settings.color_btn }};
                                                          background-color: {{ block.settings.bg_btn }};
                                                          border-color: {{ block.settings.color_btn }};
                                                        }
                                                        #block-{{ block.id }} a.button.btn-base path , 
                                                        #block-{{ block.id }} .btn-outline path , 
                                                        #block-{{ block.id }} .btn-base path {
                                                          fill: {{ block.settings.color_btn }};
                                                        }
                                                        #block-{{ block.id }} a.button.btn-base:hover,
                                                        #block-{{ block.id }} .btn-outline:hover, 
                                                        #block-{{ block.id }} .btn-line:hover ,
                                                        #block-{{ block.id }} .btn-line-black:hover ,
                                                        #block-{{ block.id }} .btn-base:hover {
                                                          color: {{ block.settings.color_btn_hover }};
                                                          background-color: {{ block.settings.bg_btn_hover }};
                                                          border-color: {{ block.settings.color_btn_hover }};
                                                        }
                                                        #block-{{ block.id }} a.button.btn-base:hover path , 
                                                        #block-{{ block.id }} .btn-outline:hover path , 
                                                        #block-{{ block.id }} .btn-base:hover path {
                                                          fill: {{ block.settings.color_btn_hover }};
                                                        }
                                                      </style>
                                                      <a href="{{ block.settings.link1 }}" class="button {{ block.settings.style_btn }} btn-sm">
                                                          {{ block.settings.button1_label }}
                                                          {% if block.settings.style_btn == 'btn-line-black' %}
                                                            {% render 'icon-arrow-3' %}
                                                          {% else %}
                                                            {% render 'icon-arrow-2' %}
                                                          {% endif %}
                                                      </a>
                                                      {% endif %}

                                                    </div>
                                                </div>
                                            </div>
                                            <blockquote class="banner__content blockquote">
                                                {{ block.settings.content }}
                                            </blockquote>
                                        </div>
                                    </banner-carousel-item>
                            {% endcase %}
                        {% endfor %}
                    </div>
                </div>
                {% if section.settings.show_arrow %}
                    <div class="carousel-arrow">
                        <ap-button-nextprev class="carousel__ap-nextprev hd-lg-none" style="--smallest-image-aspect-ratio: 1.0">
                            <button class="carousel__arrow ap-nextap-buttonprev ap-nextap-buttonprev--prev" disabled="">
                            <span class="visually-hidden">Previous</span>
                              <svg xmlns="http://www.w3.org/2000/svg" width="8" height="12" viewBox="0 0 8 12" fill="none">
                                <path d="M7.40991 10.59L2.82991 6L7.40991 1.41L5.99991 0L-8.7738e-05 6L5.99991 12L7.40991 10.59Z"
                                  fill="black" />
                              </svg>
                            </button>
                            <button class="carousel__arrow ap-nextap-buttonprev ap-nextap-buttonprev--next">
                            <span class="visually-hidden">Next</span>
                              <svg xmlns="http://www.w3.org/2000/svg" width="8" height="12" viewBox="0 0 8 12" fill="none">
                                <path d="M0.590088 10.59L5.17009 6L0.590088 1.41L2.00009 0L8.00009 6L2.00009 12L0.590088 10.59Z" fill="black"/>
                              </svg>
                            </button>
                        </ap-button-nextprev>   
                    </div>
                {% endif %}
            </div>
        </banner-carousel>
    </div>
  </div>
</section>

