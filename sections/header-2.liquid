{%- style -%}
  
  :root {
    --enable-sticky-header: {% if section.settings.sticky_header %}1{% else %}0{% endif %};
    --enable-transparent-header: {% if section.settings.transparent_header %}1{% else %}0{% endif %};
  }

  #shopify-section-{{ section.id }} {
    --header-background: {{ section.settings.header_background }};
    --header-text-color: {{ section.settings.header_text_color | color_extract: 'red' }}, {{ section.settings.header_text_color | color_extract: 'green' }}, {{ section.settings.header_text_color | color_extract: 'blue' }};
    --header-border-color: {{ section.settings.header_border_color }};
    --reduce-header-padding: {{ section.settings.reduce_header_padding }};
    position: -webkit-sticky;
    {% if section.settings.sticky_header %}position: sticky;{% endif %}
    top: calc(var(--enable-sticky-ap-announcementbar) * var(--ap-announcementbar-height, 0px));
    z-index: 3;
  }

  .header__icon-list > a > svg > path ,
  .header__secondary-links svg path ,
  .header__icon-list .user-icon > svg > path {
    stroke: rgb(var(--header-text-color));
  } 

  .icon-search-mobi path {
    fill: rgb(var(--header-text-color));
  }
  
  .header__icon-list > a:hover > svg > path ,
  .header__secondary-links svg:hover path ,
  .header__icon-list .user-icon > svg:hover > path {
    stroke: {{ section.settings.color_menu_hover }};
  }

  ap-navigationofdesktop .header__linklist-link ,
  ap-headerstore .drawer__header .drawer__close-button svg path {
    color: {{ section.settings.color_menu }};
  }
  .header__linklist-link path {
    fill: var(--primary);
  }
  .header__linklist-item:hover .header__linklist-link {
    color: {{ section.settings.color_menu_hover }};
  }
  .header__linklist-link:hover path {
    fill: {{ section.settings.color_menu_hover }};
  }
  .link-menu {
    color: {{ section.settings.color_link }};
  }   
  .link-menu:hover {
    color: {{ section.settings.color_link_hover }};
  }

  button.vertical-nav__link {
    color: {{ section.settings.color_menu_child_title }};
  }
  .vertical-nav__link {
    color: {{ section.settings.color_menu_child }};
  }
  .vertical-nav__link:hover {
    color: {{ section.settings.color_menu_child_hover }};
  }

  #shopify-section-{{ section.id }} .header__logo-image {
    max-width: {{ section.settings.logo_width }}px;
  }

  .icon-header i.fa , 
  .header__icon-wrapper {
    font-size: 20px;
    color: {{ section.settings.color_menu }};
  }

  @media screen and (min-width: 741px) {
    #shopify-section-{{ section.id }} .header__logo-image {
      max-width: {{ section.settings.logo_width }}px;
    }
  }

  /* HEADER transparent */
  .header[transparent=""]:hover {
    background-color: var(--header-background);
  }
  .js body:not(.index) #shopify-section-{{ section.id }} .header-transparent {
    background-color: var(--header-background);
  }
  body:not(.index) .header[transparent=""] {
    position: unset;
    background: var(--header-background);
  }
  /* END  */

{%- endstyle -%}


<ap-headerstore {% if section.settings.transparent_header %}transparent=""{% endif %} {% if section.settings.sticky_header %}sticky=""{% endif %} class="header header-2
" role="banner">   
  <div class="{%- if section.settings.fullwidth -%}container-fluid{%- else -%}container{%- endif -%}">
    <div class="header_wrapper">
        {% if section.settings.enable_vetical %}
            <div class="menu-vertical">
                <button is="toggle-button" class="header__icon-wrapper tap-area"
                    ap-controlsaria="vertical-menu-drawer" ap-expanded-aria="false">
                    <div class="vertical-title">
                        <div class="nav-vertical-title">All Departments</div>
                        <div class="icon-title_vertical">
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="17" viewBox="0 0 40 17" fill="none">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M40 1H0V0H40V1Z" fill="white"/>
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M40 9H0V8H40V9Z" fill="white"/>
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M40 17H0V16H40V17Z" fill="white"/>
                            </svg>
                        </div>
                    </div>
                    <span class="visually-hidden">Navigation</span>
                    <svg focusable="false" width="18" height="14"
                        class="icon icon--header-hamburger d-xl-none " viewBox="0 0 18 14">
                        <path d="M0 1h18M0 13h18H0zm0-6h18H0z" fill="none" stroke="currentColor"
                            stroke-width="1.2"></path>
                    </svg>
                </button>
                {% render 'vertical-menu' %}
            </div>
        {% endif %}
        {% if section.settings.enable_menu %}
        {% render 'header-menu', _class: "header__inline-wrapper" %}
        {% endif %}
        {% render 'header-logo' %}   
        <div class="header__secondary-links">

            <div class="header__icon-list">

              <div class="header-icon header__icon-list">
                <div class="icon-header header__icon-wrapper tap-area wrapper-user">
                  {% render 'header-user' %}
                </div>
              </div>

              <a href="/search" is="ap-togglelink" class="header__icon-wrapper tap-area hd-pocket hd-lap " aria-label="Search" ap-controlsaria="search-drawer" ap-expanded-aria="false">
                {% render "icon-search-header" %}
              </a>

              {% if section.settings.enable_localization %}
                {% render 'localization' %}
              {% endif %}

              <a href="/cart" is="ap-togglelink" ap-controlsaria="mini-cart" ap-expanded-aria="false" class="header__icon-wrapper tap-area " aria-label="Cart" data-no-instant="">
                {% render 'icon-cart' %}
                <ap-cartcount class="header__ap-cartcount header__ap-cartcount--floating bubble-count">
                  {{ cart.item_count }}
                </ap-cartcount>
              </a>

              {% if section.settings.button1_label != blank %}
                <div class="header-contact_button">
                  <a href="{{ section.settings.link1 }}" class="button btn-base">
                    {{ section.settings.button1_label }}
                    {% render 'icon-arrow-2' %}
                  </a>
                </div>
              {% endif %}

            </div>
        </div>
    </div>
  </div>
</ap-headerstore>

{% render 'mobile-menu' %}
          
