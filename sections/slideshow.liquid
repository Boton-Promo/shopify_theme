{%- style -%}
  #shopify-section-{{ section.id }} {
    --progress-bar-color: {{ section.settings.progress_bar_color | color_extract: 'red' }}, {{ section.settings.progress_bar_color | color_extract: 'green' }}, {{ section.settings.progress_bar_color | color_extract: 'blue' }};
    --section-autoplay-duration: {{ section.settings.autoplay_duration }}s;
    --section-animation-play-state: paused;
    background-color: {{ section.settings.background_color }};
  }
  {% for block in section.blocks %}
    #block-{{ block.id }} {
      --color-des: {{ block.settings.color_des }};
      --color-caption: {{ block.settings.color_caption }};
      --heading-color: {{ block.settings.heading_color | color_extract: 'red' }}, {{ block.settings.heading_color | color_extract: 'green' }}, {{ block.settings.heading_color | color_extract: 'blue' }};
      --color-body: {{ block.settings.text_color | color_extract: 'red' }}, {{ block.settings.text_color | color_extract: 'green' }}, {{ block.settings.text_color | color_extract: 'blue' }};
      --primary-button-background: {{ block.settings.button_background | color_extract: 'red' }}, {{ block.settings.button_background | color_extract: 'green' }}, {{ block.settings.button_background | color_extract: 'blue' }};
      --primary-button-text-color: {{ block.settings.button_text_color | color_extract: 'red' }}, {{ block.settings.button_text_color | color_extract: 'green' }}, {{ block.settings.button_text_color | color_extract: 'blue' }};
      --primary-button-background2: {{ block.settings.button_background2 | color_extract: 'red' }}, {{ block.settings.button_background2 | color_extract: 'green' }}, {{ block.settings.button_background2 | color_extract: 'blue' }};
      --primary-button-text-color2: {{ block.settings.button_text_color2 | color_extract: 'red' }}, {{ block.settings.button_text_color2 | color_extract: 'green' }}, {{ block.settings.button_text_color2 | color_extract: 'blue' }};
      --primary-button-text-hover: {{ block.settings.button_text_color_hover | color_extract: 'red' }}, {{ block.settings.button_text_color_hover | color_extract: 'green' }}, {{ block.settings.button_text_color_hover | color_extract: 'blue' }};
      --primary-button-bg-hover: {{ block.settings.button_bg_hover | color_extract: 'red' }}, {{ block.settings.button_bg_hover | color_extract: 'green' }}, {{ block.settings.button_bg_hover | color_extract: 'blue' }};
      --button-overlay-opacity: {{ block.settings.button_opacity | divided_by: 10.0 }};

      --section-blocks-alignment: center;
      --section-blocks-overlay-color: {{ block.settings.blocks_overlay_color | color_extract: 'red' }}, {{ block.settings.blocks_overlay_color | color_extract: 'green' }}, {{ block.settings.blocks_overlay_color | color_extract: 'blue' }};
      --section-blocks-overlay-opacity: {{ block.settings.overlay_opacity | divided_by: 10.0 }};
    }

    {% if block.settings.bg_heading_h2 != blank %}
    #shopify-section-{{ section.id }} h2.heading {
      background-image: url({{ block.settings.bg_heading_h2 | image_url: width: 2000 }});
      background-repeat: no-repeat;
      background-size: auto;
      {% if block.settings.text_align == 'left' %}
        background-position: left;
      {% elsif block.settings.text_align == 'right' %}
        background-position: right;
      {% else %}
        background-position: center center;
      {% endif %}
    }
      {% endif %}

  {% endfor %}
  .slideshow__text-wrapper a.button.btn-base {
    background-color: rgb(var(--primary-button-background) , var(--button-overlay-opacity));
    color: rgb(var(--primary-button-text-color));
    padding: 16px 40px!important;
    border-radius: 30px;
    border: 1px solid #222222;
    margin: 0;
    transition: all 300ms cubic-bezier(.5,2.5,.7,.7);
  }

   .slideshow__text-wrapper .button.btn-base {
    background-color: rgb(var(--primary-button-background2));
    color: rgb(var(--primary-button-text-color2));
    padding: 16px 40px!important;
    border-radius: 30px;
    border: 1px solid #222222;
    margin: 0;
    transition: all 300ms cubic-bezier(.5,2.5,.7,.7);
    display: flex;
    align-items: center;
    width: fit-content;
  }
  
  .slideshow__text-wrapper .button.btn-base:hover {
    background-color: rgb(var(--primary-button-bg-hover));
    color: rgb(var(--primary-button-text-hover));
    transform: translate(-2px, -2px);
    box-shadow: 2px 2px 0px 0px #333;
  }

  .slideshow__text-wrapper a.button.btn-base path {
    fill: rgb(var(--primary-button-text-color));
    transition: all .4s;
  }

  .slideshow__text-wrapper .button.btn-base path {
    fill: rgb(var(--primary-button-text-color2));
    transition: all .4s;
  }
  
  .slideshow__text-wrapper a.button.btn-base:hover path {
    fill: rgb(var(--primary-button-text-color));
  }

  .slideshow__text-wrapper .button.btn-base:hover path {
    fill: rgb(var(--primary-button-text-color));
  }

  #shopify-section-{{ section.id }} h2.heading {
    font-weight: 600;
    letter-spacing: 2px;
    font-family: var(--g-font-other);
    color: var(--color-caption);
    margin-bottom: 6px;
  }
  #shopify-section-{{ section.id }} h3.heading.h1 {
    font-size: 80px;
    line-height: 1.1;
    margin: 0 0 30px;
    text-transform: none;
    font-weight: 500;
    text-transform: capitalize;
  }
  #shopify-section-{{ section.id }} h4.heading.fs-h-u70 {
    line-height: 0.86;
  }
  #shopify-section-{{ section.id }} .description {
    color: var(--color-des);
    line-height: 1.4;
    margin: 0 0 19px;
    font-size: 20px;
  }
  {% if section.settings.show_bg_content %}
  #shopify-section-{{ section.id }} .content-box {
    padding: 70px;
    background-color: var(--primary);
    border-radius: 10px;
    max-width: 490px;
  }
  {% endif %}

  /* ARROW */
  #shopify-section-{{ section.id }} .ap-listslideshow__arrow {
    background-color: {{ section.settings.bg_btn_arrow }};
    color: {{ section.settings.color_btn_arrow }};
    border: none;
    width: auto;
    height: auto;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    bottom: unset;
    z-index: 1;
    transition: all .4s;
    opacity: 0;
    visibility: hidden;
  }
  #shopify-section-{{ section.id }} .slideshow:hover .ap-listslideshow__arrow {
    opacity: 1;
    visibility: visible;
  }
  #shopify-section-{{ section.id }} .ap-listslideshow__arrow i.fa {
    font-size: 50px;
  }
  #shopify-section-{{ section.id }} .sl-btn-prev {
    left: 100px;
    right: unset;
  }
  #shopify-section-{{ section.id }} .sl-btn-next {
    right: 100px;
    left: unset;
  }
  #shopify-section-{{ section.id }} .slideshow:hover .sl-btn-prev {
    left: 50px;
  }
  #shopify-section-{{ section.id }} .slideshow:hover .sl-btn-next {
    right: 50px;
  }
  #shopify-section-{{ section.id }} .ap-listslideshow__ap-button-nextprev {
    display: block;
  }
  /* END */

  @media (max-width: 991px) {
    #shopify-section-{{ section.id }} h3.heading.h1 {
      font-size: 46px;
      margin: 0 0 30px;
    }
    {% if section.settings.show_bg_content %}
      #shopify-section-{{ section.id }} .content-box {
      padding: 30px;
      max-width: 400px;
    }
    {% endif %}
    #shopify-section-{{ section.id }} .container-fluid {
      padding: 0;
    }
  }
  @media (max-width: 767px) {
    #shopify-section-{{ section.id }} h4.heading.fs-h-u70 {
      line-height: 1.4;
    }
  }
  @media (max-width: 480px) {
    #shopify-section-{{ section.id }} h3.heading.h1 ,
    #shopify-section-{{ section.id }} h4.heading.h1.fs-h-u70 {
      font-size: 46px;
    }
  }
{%- endstyle -%}

{% render 'section-style' %}

<section class="section section--flush {{ section.settings.class }}">
  <div class="{{ section.settings.setwidthout }}">
    <div class="slide-row">
      <ap-slideshow reveal-on-scroll="" auto-play="" transition-type="sweep" class="slideshow {{ section.settings.slideshow_height }} ap-object-loaded" style="">
        <div class="slideshow__slide-list">
  
          {%- for block in section.blocks -%}
            {% if block.settings.image_link != blank %}{% comment %} Esto no estaba es para el href {% endcomment %}
              <a href="{{ block.settings.image_link }}">
              {% endif %}
            {%- case block.type -%}
              {%- when 'slide' -%}
                <ap-slideshowitem ap-revealvisibility="" id="block-{{ block.id }}" class="slideshow__slide {% if block.settings.image_2 %}slideshow__slide--split{% endif %} slideshow__slide--sweep" style="visibility: visible;" {% if forloop.index > 1 %}hidden=""{% endif %}>
                  <div class="slideshow__slide-inner">
                    {% if block.settings.image_1 %}
                      <div class="slideshow__image-wrapper slideshow__image-wrapper--first">
                        <img src="{{ block.settings.image_1 | image_url: 3000 }}" 
                          srcset="{{ block.settings.image_1 | image_url: width: 400 }} 400w, {{ block.settings.image_1 | image_url: width: 500 }} 500w, {{ block.settings.image_1 | image_url: width: 600 }} 600w, {{ block.settings.image_1 | image_url: width: 700 }} 700w, {{ block.settings.image_1 | image_url: width: 800 }} 800w, {{ block.settings.image_1 | image_url: width: 900 }} 900w, {{ block.settings.image_1 | image_url: width: 1000 }} 1000w, {{ block.settings.image_1 | image_url: width: 1200 }} 1200w, {{ block.settings.image_1 | image_url: width: 3000 }} 1400w" 
                          loading="eager" draggable="false" class="slideshow__image" sizes="100vw" width="3000" height="4204">
                      </div>
                    {% endif %}   
                    {% if block.settings.image_2 %}
                      <div class="slideshow__image-wrapper slideshow__image-wrapper--secondary">
                        <img src="{{ block.settings.image_2 | image_url: 3000 }}" 
                          srcset="{{ block.settings.image_2 | image_url: width: 400 }} 400w, {{ block.settings.image_2 | image_url: width: 500 }} 500w, {{ block.settings.image_2 | image_url: width: 600 }} 600w, {{ block.settings.image_2 | image_url: width: 700 }} 700w, {{ block.settings.image_2 | image_url: width: 800 }} 800w, {{ block.settings.image_2 | image_url: width: 900 }} 900w, {{ block.settings.image_2 | image_url: width: 1000 }} 1000w, {{ block.settings.image_2 | image_url: width: 1200 }} 1200w, {{ block.settings.image_2 | image_url: width: 3000 }} 1400w" 
                          loading="eager" draggable="false" class="slideshow__image" sizes="100vw" width="3000" height="4204">
                      </div>
                    {% endif %}
                    {% if block.settings.image_mobile %}
                      <div class="slideshow__image-wrapper hd-tablet-s">
                        <img src="{{ block.settings.image_mobile | image_url: 3000 }}" 
                          srcset="{{ block.settings.image_mobile | image_url: width: 400 }} 400w, {{ block.settings.image_mobile | image_url: width: 500 }} 500w, {{ block.settings.image_mobile | image_url: width: 600 }} 600w, {{ block.settings.image_mobile | image_url: width: 700 }} 700w, {{ block.settings.image_mobile | image_url: width: 800 }} 800w, {{ block.settings.image_mobile | image_url: width: 900 }} 900w, {{ block.settings.image_mobile | image_url: width: 1000 }} 1000w, {{ block.settings.image_mobile | image_url: width: 1200 }} 1200w, {{ block.settings.image_mobile | image_url: width: 3000 }} 1400w" 
                          loading="eager" draggable="false" class="slideshow__image" sizes="100vw" width="3000" height="4204">
                      </div>
                    {% endif %}
  
                    <div class="">
                      <div class="slideshow__text-wrapper slideshow__text-wrapper--middle vertical-breather content-box--{{ block.settings.box_align }}">
                        <div class="content-box content-box--{{ block.settings.box_size }} content-box--text-{{ block.settings.text_align }} text-container">
                          {% if block.settings.heading_size %}
                            <h2 class="heading {{ block.settings.heading_size }} fs-d2 uppercase">
                              <ap-splitlines reveal="" style="opacity: 1;">
                                {% assign heading = block.settings.heading | split: "|" %}
                                {% for item in heading %}
                                  <span reveal="" style="display: block; opacity: 0; visibility: hidden;">{{ item | strip }}</span>
                                {% endfor %}
                              </ap-splitlines>
                            </h2>
                          {% endif %}
                          {% if block.settings.subheading != blank %}
                            <h3 class="heading {{ block.settings.subheading_size }}">
                              <ap-splitlines reveal="" style="opacity: 1;">
                                {% assign subheading = block.settings.subheading | split: "|" %}
                                {% for item in subheading %}
                                  <span reveal="" style="display: block; opacity: 0; visibility: hidden;">{{ item | strip }}</span>
                                {% endfor %}
                              </ap-splitlines>
                            </h3>
                          {% endif %}
                          {% if block.settings.subheading2 != blank %}
                            <h4 class="heading {{ block.settings.subheading_size_2 }} fs-h-u70 mb-0 mt-d15">
                              <ap-splitlines reveal="" style="opacity: 1;">
                                {% assign subheading2 = block.settings.subheading2 | split: "|" %}
                                {% for item in subheading2 %}
                                  <span reveal="" style="display: block; opacity: 0; visibility: hidden;">{{ item | strip }}</span>
                                {% endfor %}
                              </ap-splitlines>
                            </h4>
                          {%endif %}
                          {% if block.settings.description != blank  %}
                          <div class="description fs-u4">
                            <ap-splitlines reveal="" style="opacity: 1;">
                              {% assign description = block.settings.description | split: "|" %}
                              {% for item in description %}
                                <span reveal="" style="display: block; opacity: 0; visibility: hidden;">{{ item | strip }}</span>
                              {% endfor %}
                            </ap-splitlines>
                          </div>
                          {% endif %}
                          {% if block.settings.icon != blank and block.settings.description_service != blank %}
                            <div class="adv-text-service">
                              <div class="adv-text-service_list">
                                <div class="adv-text-service-item">
                                  <div class="adv-text-service-icon">{{ block.settings.icon }}</div>
                                  <div class="adv-service-content">
                                    <div style="color: {{ block.settings.color_description_service }}"
                                      class="adv-text-service-description">{{ block.settings.description_service }}</div>
                                  </div>
                                </div>
                                <div class="adv-text-service-item">
                                  <div class="adv-text-service-icon">{{ block.settings.icon2 }}</div>
                                  <div class="adv-service-content">
                                    <div style="color: {{ block.settings.color_description_service }}"
                                      class="adv-text-service-description">{{ block.settings.description_service2 }}</div>
                                  </div>
                                </div>
                                <div class="adv-text-service-item">
                                  <div class="adv-text-service-icon">{{ block.settings.icon3 }}</div>
                                  <div class="adv-service-content">
                                    <div style="color: {{ block.settings.color_description_service }}"
                                      class="adv-text-service-description">{{ block.settings.description_service3 }}</div>
                                  </div>
                                </div>
                                <div class="adv-text-service-item">
                                  <div class="adv-text-service-icon">{{ block.settings.icon4 }}</div>
                                  <div class="adv-service-content">
                                    <div style="color: {{ block.settings.color_description_service }}"
                                      class="adv-text-service-description">{{ block.settings.description_service4 }}</div>
                                  </div>
                                </div>
                              </div>
                            </div>
                            {% endif %}
                          <div class="button-group" reveal="">
                            {% if block.settings.button1_label == blank or block.settings.button2_label == blank %}
                              <div class="button-wrapper">
                            {% else %}
                              <div class="button-group__wrapper">
                            {% endif %}
                              {% if block.settings.button1_label != blank %}
                                <a href="{{ block.settings.link1 }}" class="button btn-base">
                                  {{ block.settings.button1_label }}
                                  {% render 'icon-arrow-2' %}
                                </a>
                              {% endif %}
                              {% if block.settings.button2_label != blank %}

                                <button type="button" id="video-button" class="button btn-base" style="z-index:1" title="Play video">
                                  {{ block.settings.button2_label }}
                                  {% if block.settings.custom_icon != blank %}
                                      {{ block.settings.custom_icon }}
                                  {% endif %}
                                </button>
                                <div id="video-popup" class="popup-overlay">
                                  <div class="popup-content">
                                    <iframe width="560" height="315" src="{{ section.settings.video_url }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                                  </div>
                                </div>
                              
                              {% endif %}
                              
                            </div>
                          </div>

                          {% if section.settings.show_bg_content %}
                          <div reveal="" class="slideshow-item-child slideshow-item-1"></div>
                          <div reveal="" class="slideshow-item-child slideshow-item-2"></div>
                          <div reveal="" class="slideshow-item-child slideshow-item-3"></div>
                          {% endif %}

                        </div>
                      </div>
                      </div>
                      
                  </div>
                </ap-slideshowitem>
  
            {%- endcase -%}
              {% if block.settings.image_link != blank %}
                </a> {% comment %} Esto tampoco es para el href {% endcomment %}
                  {% endif %}
          {%- endfor -%}
        </div>
        {% if section.settings.show_dot %}
        <ap-pagedots animation-timer="" class="slideshow__nav container">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'slide' -%}
                <button class="slideshow__progress-bar" ap-controlsaria="block-{{ block.id }}" ap-currentaria="{% if forloop.index == 1 %}true{% else %}false{% endif %}">
                  <span class="visually-hidden">{{ forloop.index }}</span>
                </button>
            {%- endcase -%}
          {%- endfor -%}
        </ap-pagedots>
        {% endif %}
        {% if section.settings.show_btn %}
        <ap-button-nextprev class="ap-listslideshow__ap-button-nextprev ap-button-nextprev ap-button-nextprev--row">
            <button class="ap-listslideshow__arrow ap-nextap-buttonprev ap-nextap-buttonprev--prev sl-btn-prev">
                <span class="visually-hidden">Previous</span>
                <i class="fa fa-solid fa-chevron-left"></i> <!-- Se cambio solo el light por el solid y fa-chevron-left por <i class="fa-solid fa-square-right"></i>-->
            </button>
  
            <button class="ap-listslideshow__arrow ap-nextap-buttonprev ap-nextap-buttonprev--next sl-btn-next">
                <span class="visually-hidden">Next</span>
                <i class="fa fa-solid fa-chevron-right"></i>
            </button>
        </ap-button-nextprev>
        {% endif %}
      </ap-slideshow>
    </div>
  </div>
</section>
<script>
  document.getElementById('video-button').addEventListener('click', function() {
    document.getElementById('video-popup').style.display = 'flex';
  });

  document.getElementById('video-popup').addEventListener('click', function(event) {
    if (event.target === this) {
      this.style.display = 'none';
    }
  });
</script>
