{{ 'advanced-content.css' | asset_url | stylesheet_tag }}
{% render 'section-style' %}

<style>
    #shopify-section-{{ section.id }} {
      --heading-color: {{ section.settings.heading_color | color_extract: 'red' }}, {{ section.settings.heading_color | color_extract: 'green' }}, {{ section.settings.heading_color | color_extract: 'blue' }};
      --color-body: {{ section.settings.text_color | color_extract: 'red' }}, {{ section.settings.text_color | color_extract: 'green' }}, {{ section.settings.text_color | color_extract: 'blue' }};
      --background-color-content : {{ section.settings.primary_bg }};
      --primary-button-text-color: 255, 255, 255;
  
      --ap-nextap-buttonprev-background: {{ section.settings.prev_next_button_background | color_extract: 'red' }}, {{ section.settings.prev_next_button_background | color_extract: 'green' }}, {{ section.settings.prev_next_button_background | color_extract: 'blue' }};
      --ap-nextap-buttonprev-color: {{ section.settings.prev_next_button_color | color_extract: 'red' }}, {{ section.settings.prev_next_button_color | color_extract: 'green' }}, {{ section.settings.prev_next_button_color | color_extract: 'blue' }};;
  
    }
    #shopify-section-{{ section.id }} .advanced-content {
      border-width: {{ section.settings.border_width }};
    }

    #shopify-section-{{ section.id }} .advanced-content {
      position: relative;
    }

    @media (min-width: 992px) {
      #shopify-section-{{ section.id }} .advanced-content .row.no-gutters {
        padding: {{ section.settings.padding_content }};
        background-color: var(--background-color-content);
      }
    }

    {% for block in section.blocks %} 
      {% case block.type %}
        {%- when 'product' -%}

    @media screen and (max-width: 575px) {
      #shopify-section-{{ section.id }} {
        --section-products-per-row: {{ block.settings.products_per_row_mobile }};
      }
      #shopify-section-{{ section.id }} .ap-productlist__inner--scroller{
        grid-auto-columns: calc( 100% / var(--section-products-per-row, 4) - ( var(--grid-gap) / var(--section-products-per-row, 4) * (var(--section-products-per-row, 4) - 1)));
      } 
    }

    @media (min-width:576px) and (max-width: 767px) {
      #shopify-section-{{ section.id }} {
        --section-products-per-row: {{ block.settings.products_per_row_ipad }};
        --ap-productlist-block-spacing: 0px;
      }
      #shopify-section-{{ section.id }} .ap-productlist__inner--scroller{
        grid-auto-columns: calc( 100% / var(--section-products-per-row, 4) - ( var(--grid-gap) / var(--section-products-per-row, 4) * (var(--section-products-per-row, 4) - 1)));
      }  
    }
    
    @media (min-width: 768px) and (max-width: 1199px) {
      #shopify-section-{{ section.id }} {
        --section-products-per-row: {{ block.settings.products_per_row_tablet }}
      }
      #shopify-section-{{ section.id }} .ap-productlist__inner--scroller{
        grid-auto-columns: calc( 100% / var(--section-products-per-row, 4) - ( var(--grid-gap) / var(--section-products-per-row, 4) * (var(--section-products-per-row, 4) - 1)));
      }
    }

    @media screen and (min-width: 1200px) {
      #shopify-section-{{ section.id }} {
        --section-products-per-row: {{ block.settings.products_per_row_desktop }};
      }
      #shopify-section-{{ section.id }} .ap-productlist__inner--scroller{
        grid-auto-columns: calc( 100% / var(--section-products-per-row, 4) - ( var(--grid-gap) / var(--section-products-per-row, 4) * (var(--section-products-per-row, 4) - 1)));
      }
    }
                   
      {% endcase %}
    {% endfor %} 
                   
    @media (max-width: 999px) {
      #shopify-section-{{ section.id }} .row.no-gutters .scroller {
        margin: 0;
      }
    }
  </style>
  
<section class="section advanced-content {{ section.settings.class }}">
  <div class="{{ section.settings.setwidthout }}">
    {% if section.settings.tab_heading != blank %}
    <header class="section__header text-{{ section.settings.text_align }} mb-60">
        <h3 class="heading h{{ section.settings.tab_heading_size }} mb-20">{{ section.settings.tab_heading }}</h3>
        {% if section.settings.tab_description != blank %}
          <div class="heading-description">
            {{ section.settings.tab_description }}
          </div>
        {% endif %}
        {% if section.settings.btn_text != blank %}
        <div class="btn-more">
          <a href="{{ section.settings.btn_link }}" class="button {{ section.settings.style_btn }}">
            {{ section.settings.btn_text }}
          </a>
          </div>
        {% endif %}
    </header>
    {% endif %}
      <div class="row {% if section.settings.no_gutter %}no-gutters{% endif %}">
          {% for block in section.blocks %}
            {%- case block.settings.width -%}
            {%- when '20%' -%}
            {%- assign block_width = 'col-xl-20 col-lg-33 col-md-33 col-100' -%}
            {%- when '25%' -%}
            {%- assign block_width = 'col-xl-25 col-md-50 col-100' -%}
            {%- when '33%' -%}
            {%- assign block_width = 'col-xl-33 col-md-50 col-100' -%}
            {%- when '37%' -%}
            {%- assign block_width = 'col-xl-37 col-md-50 col-100' -%}
            {%- when '40%' -%}
            {%- assign block_width = 'col-xl-40 col-lg-33 col-md-33 col-100' -%}
            {%- when '50%' -%}
            {%- assign block_width = 'col-xl-50 col-md-50 col-100' -%}
            {%- when '60%' -%}
            {%- assign block_width = 'col-xl-60 col-md-50 col-100' -%}
            {%- when '63%' -%}
            {%- assign block_width = 'col-xl-63 col-md-50 col-100' -%}
            {%- when '66%' -%}
            {%- assign block_width = 'col-xl-66 col-md-50 col-100' -%}
            {%- when '75%' -%}
            {%- assign block_width = 'col-xl-75 col-md-50 col-100' -%}
            {%- when '80%' -%}
            {%- assign block_width = 'col-lg-80 col-md-66 col-sm-50 col-100' -%}
            {%- when '100%' -%}
            {%- assign block_width = 'col-100' -%}
            {%- endcase -%}
            <div id="block-{{ block.id }}" class="{{ block_width }} {{ block.settings.class }}">
              {% case block.type %}

                {%- when 'product' -%}
                <div id="block-{{ block.id }}" class="featured-collections advanced-product {% if block.settings.style_2 %} adv-pro-2{% endif %}">
                    {% if block.settings.header_product != blank %}
                    <div class="adv-product-heading">
                      {% if block.settings.header_product != blank %}
                      <h3 class="header-product heading h3">{{ block.settings.header_product }}</h3>
                      {% endif %}
                      {% if block.settings.tab_description != blank %}
                      <div class="heading-description">
                        {{ block.settings.tab_description }}
                      </div>
                      {% endif %}
                      {% if block.settings.btn_text != blank %}
                      <div class="btn-more">
                        <a href="{{ block.settings.btn_link }}" class="button {{ block.settings.style_btn }}">
                          {{ block.settings.btn_text }}
                        </a>
                      </div>
                      {% endif %}
                    </div>
                    {% endif %}
                    <ap-productlist stagger-apparition="" class="ap-productlist ap-productlist--center ap-object-loaded">
                        <div class="scroller">
                            <div class="ap-productlist__inner ap-productlist__inner--scroller hide-scrollbar">
                            {%- if block.settings.collection != blank -%}
                              {% liquid
                                  assign limit = block.settings.limit
                                  for product in block.settings.collection.products limit: limit
                                  render 'product-grid', product: product
                                  endfor
                              %}
                            {%- else -%}
                              {% liquid
                                if block.settings.collection == blank
                                  for i in (1..6)
                                  echo '<div class="product-items">'
                                    capture current
                                    cycle 1
                                    endcapture
                                    assign img = 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg'
                                    echo img
                                    echo '</div>'
                                  endfor
                                endif
                              %}
                            {%- endif -%}
                            </div>
                        </div>
                        <ap-button-nextprev class="ap-productlist__ap-nextprev hd-pocket" style="--smallest-image-aspect-ratio: 1.0">
                            <button class="ap-productlist__arrow ap-nextap-buttonprev ap-nextap-buttonprev--prev" disabled="">
                            <span class="visually-hidden">Previous</span>
                            <svg focusable="false" width="17" height="14" class="icon icon--nav-arrow-left  icon--direction-aware " viewBox="0 0 17 14">
                                <path d="M17 7H2M8 1L2 7l6 6" stroke="currentColor" stroke-width="2" fill="none"></path>
                            </svg>
                            </button>
                            <button class="ap-productlist__arrow ap-nextap-buttonprev ap-nextap-buttonprev--next">
                            <span class="visually-hidden">Next</span>
                            <svg focusable="false" width="17" height="14" class="icon icon--nav-arrow-right  icon--direction-aware " viewBox="0 0 17 14">
                                <path d="M0 7h15M9 1l6 6-6 6" stroke="currentColor" stroke-width="2" fill="none"></path>
                            </svg>
                            </button>
                        </ap-button-nextprev>
                    </ap-productlist>
                  </div>

                {%- when 'image' -%}
                  <adv-image id="img-{{ block.id }}" reveal-on-scroll="" class="ap-imagetextblock ap-imagetextblock--cover ap-object-loaded">
                    <div class='adv-image ap-imagetextblock-link'>
                      <div class="ap-imagetextblock__image-wrapper">
                        {% if  block.settings.image_background != blank %}
                          <img class="adv-list-image" reveal="" loading="lazy" 
                              sizes="(max-width: 999px) 100vw, 72vw" alt="" 
                              src="{{ block.settings.image_background | image_url: width: block.settings.image_background.width }}" 
                              srcset="
                              {{ block.settings.image_background | image_url: width: 600 }} 600w, 
                              {{ block.settings.image_background | image_url: width: 700 }} 700w, 
                              {{ block.settings.image_background | image_url: width: 800 }} 800w, 
                              {{ block.settings.image_background | image_url: width: 1000 }} 1000w, 
                              {{ block.settings.image_background | image_url: width: 1200 }} 1200w, 
                              {{ block.settings.image_background | image_url: width: 1400 }} 1400w, 
                              {{ block.settings.image_background | image_url: width: 1600 }} 1600w, 
                              {{ block.settings.image_background | image_url: width: 1800 }} 1800w, 
                              {{ block.settings.image_background | image_url: width: 2000 }} 2000w" 
                              width="{{ block.settings.image_background.width }}" height="{{ block.settings.image_background.height }}">     
                        {% else %}
                          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                        {% endif %} 

                        {% if block.settings.date_picker != blank %}
                          {% render 'collection-countdown' , settings: block.settings %}
                        {% endif %}
                      </div>

                      {% if block.settings.label != blank %}
                          <style>
                            #label-{{ block.id }} {
                              background-color: {{ block.settings.bg_color_label }};
                              color: {{ block.settings.color_label }}
                            }
                          </style>
                        <div id="label-{{ block.id }}" class="heading adv-img-content_label label-{{ block.settings.label_align }}">
                          {{ block.settings.label }}
                        </div>
                      {% endif %}

                      <div class="adv-img-content text-{{ block.settings.reverse_align }} image-width-text_content">
                        {% if section.settings.show_count %}
                        <span class="heading count">{{ block.settings.collection.products_count | append: ' ' |
                          append: ' products' }}
                        </span>
                        {% endif %}
                        {% if block.settings.content_title != blank %}
                        <h3 style="color: {{ block.settings.color_sub }}" class="heading adv-content-subtitle">
                          {{ block.settings.sub_title }}
                        </h3>
                        {% endif %}
                        {% if block.settings.content_title != blank %}
                        <h2 style="color: {{ block.settings.color_title }}" class="heading adv-content-title">
                          {{ block.settings.content_title }}
                        </h2>
                        {% endif %}
                        {% if block.settings.content_description != blank %}
                        <p style="color: {{ block.settings.color_des }}" class="adv-content-description">
                          {{ block.settings.content_description }}
                        </p>
                        {% endif %}
                        {% if block.settings.content_description_2 != blank %}
                        <p style="color: {{ block.settings.color_des_2 }}" class="adv-content-description-2">
                          {{ block.settings.content_description_2 }}
                        </p>
                        {% endif %}
                        {% if block.settings.button1_label != blank %}
                        <style>
                          #img-{{ block.id }} a.button.btn-base, 
                          #img-{{ block.id }} .btn-outline, 
                          #img-{{ block.id }} .btn-line ,
                          #img-{{ block.id }} .btn-line-black ,
                          #img-{{ block.id }} .btn-base {
                            color: {{ block.settings.color_btn }};
                            background-color: {{ block.settings.bg_btn }};
                            text-align: left;
                            border-color: {{ block.settings.color_btn }};
                          }
                          #img-{{ block.id }} a.button.btn-base path , 
                          #img-{{ block.id }} .btn-outline path , 
                          #img-{{ block.id }} .btn-base path {
                            fill: {{ block.settings.color_btn }};
                          }
                          #img-{{ block.id }} .btn-outline:hover, 
                          #img-{{ block.id }} a.button.btn-base:hover,
                          #img-{{ block.id }} .btn-line:hover ,
                          #img-{{ block.id }} .btn-line-black:hover ,
                          #img-{{ block.id }} .btn-base:hover {
                            color: {{ block.settings.color_btn_hover }};
                            background-color: {{ block.settings.bg_btn_hover }};
                            border-color: {{ block.settings.color_btn_hover }};
                          }
                          #img-{{ block.id }} .btn-outline:hover path , 
                          #img-{{ block.id }} a.button.btn-base:hover path , 
                          #img-{{ block.id }} .btn-base:hover path {
                            fill: {{ block.settings.color_btn_hover }};
                          }
                          #img-{{ block.id }} .btn-line svg {
                            display: none;
                          }  
                        </style>
                        <a href="{{ block.settings.link1 }}" class="button {{ block.settings.style_btn }}">
                          {{ block.settings.button1_label }}
                          {% render 'icon-arrow-2' %}
                        </a>
                        {% endif %}
                      </div>
                    </div>
                  </adv-image>

                {%- when 'text' -%}
                  <ap-imagetextblock id="text-{{ block.id }}" reveal-on-scroll="" class="ap-object-loaded text-list d-block h-100">
                      <div 
                      style="
                      background-color: {{ block.settings.bg_text }};
                      {% if block.settings.background_image != blank %}
                      background-image: url({{ block.settings.background_image | image_url: width: 2000 }});
                      {% endif %}
                      " 
                      class="text-list-content">
                        <div class="text-list_icon">
                          {{ block.settings.text_list_icon }}
                        </div>
                        <p style="color: {{ block.settings.color_sub }}" class="heading text-list-sub">
                          {{ block.settings.content_sub }}
                        </p>
                        <h2 style="color: {{ block.settings.color_title }}" class="heading {{ block.settings.heading_size }} text-list-title">
                          {{ block.settings.content_title }}
                        </h2>
                        {% if block.settings.content_description != blank %}
                        <p style="color: {{ block.settings.color_description }}" class="text-list-description">
                          {{ block.settings.content_description }}
                        </p>
                        {% endif %}

                        {% if block.settings.content_des_2 != blank %}
                          <div style="color: {{ block.settings.color_description }}" class="text-list_description_2">
                            {{ block.settings.content_des_2 }}
                          </div>
                        {% endif %}

                        {% if block.settings.icon != blank and block.settings.description_service != blank %}
                        <div class="adv-text-service">
                          <div class="adv-text-service_list">
                            <div class="adv-text-service-item">
                              <div class="adv-text-service-icon">{{ block.settings.icon }}</div>
                              <div class="adv-service-content">
                                <div style="color: {{ block.settings.color_description_service }}"
                                  class="adv-text-service-description">{{ block.settings.description_service }}</div>
                              </div>
                            </div>
                            <div class="adv-text-service-item">
                              <div class="adv-text-service-icon">{{ block.settings.icon2 }}</div>
                              <div class="adv-service-content">
                                <div style="color: {{ block.settings.color_description_service }}"
                                  class="adv-text-service-description">{{ block.settings.description_service2 }}</div>
                              </div>
                            </div>
                            <div class="adv-text-service-item">
                              <div class="adv-text-service-icon">{{ block.settings.icon3 }}</div>
                              <div class="adv-service-content">
                                <div style="color: {{ block.settings.color_description_service }}"
                                  class="adv-text-service-description">{{ block.settings.description_service3 }}</div>
                              </div>
                            </div>
                          </div>
                        </div>
                        {% endif %}

                        <div class="adv-text-menu">
                          <div class="adv-text-menu_list">
                            <div class="adv-text-menu_item">
                              <div class="adv-text-menu_title">{{ block.settings.menu_title }}</div>
                              {%- if block.settings.menu != blank -%}
                              <ul class="list--unstyled" role="list">
                                {%- for link in block.settings.menu.links -%}
                                <li>
                                  <a href="{{ link.url }}" class="link--faded">{{ link.title | escape }}</a>
                                </li>
                                {% endfor %}
                              </ul>
                              {% endif %}
                            </div>
                            <div class="adv-text-menu_item">
                              <div class="adv-text-menu_title">{{ block.settings.menu_title_2 }}</div>
                              {%- if block.settings.menu_2 != blank -%}
                              <ul class="list--unstyled" role="list">
                                {%- for link in block.settings.menu_2.links -%}
                                <li>
                                  <a href="{{ link.url }}" class="link--faded">{{ link.title | escape }}</a>
                                </li>
                                {% endfor %}
                              </ul>
                              {% endif %}
                            </div>
                          </div>
                        </div>

                        <style>
                          #block-{{ block.id }} a.button.btn-base, 
                          #block-{{ block.id }} .btn-outline, 
                          #block-{{ block.id }} .btn-line ,
                          #block-{{ block.id }} .btn-line-black ,
                          #block-{{ block.id }} .btn-base {
                            color: {{ block.settings.color_btn }};
                            background-color: {{ block.settings.bg_btn }};
                            text-align: left;
                            border-color: {{ block.settings.color_btn }};
                          }
                          #block-{{ block.id }} a.button.btn-base path , 
                          #block-{{ block.id }} .btn-outline path , 
                          #block-{{ block.id }} .btn-base path {
                            fill: {{ block.settings.color_btn }};
                          }
                          #block-{{ block.id }} .btn-outline:hover, 
                          #block-{{ block.id }} a.button.btn-base:hover,
                          #block-{{ block.id }} .btn-line:hover ,
                          #block-{{ block.id }} .btn-line-black:hover ,
                          #block-{{ block.id }} .btn-base:hover {
                            color: {{ block.settings.color_btn_hover }};
                            background-color: {{ block.settings.bg_btn_hover }};
                            border-color: {{ block.settings.color_btn_hover }};
                          }
                          #block-{{ block.id }} .btn-outline:hover path , 
                          #block-{{ block.id }} a.button.btn-base:hover path , 
                          #block-{{ block.id }} .btn-base:hover path {
                            fill: {{ block.settings.color_btn_hover }};
                          }
                          #block-{{ block.id }} .btn-line-black svg ,
                          #block-{{ block.id }} .btn-line svg {
                            display: none;
                          }  
                        </style>
                        {% if block.settings.button1_label != blank %}
                          <div class="adv-textlist-button">
                            <a href="{{ block.settings.link1 }}" class="button {{ block.settings.style_btn }}">
                                {{ block.settings.button1_label }}
                                {% render 'icon-arrow-2' %}
                            </a>
                          </div>
                        {% endif %}
                      </div>
                  </ap-imagetextblock>

                {%- when 'map' -%}
                  <div class="gmap-iframe">
                    {{ block.settings.gmap_iframe }}
                  </div>

                {%- when 'adv-contact' -%}
                  <adv-contact style="
                      background-image: url({{ block.settings.background_image | image_url: width: 2000 }});                    
                      background-position: center right;
                      background-repeat: no-repeat;
                    " class="adv-contact d-block">
                    <div class="adv-contact-img">
                      {% if  block.settings.image_background != blank %}
                        <img class="adv-list-image" loading="lazy" 
                            sizes="(max-width: 999px) 100vw, 72vw" alt="" 
                            src="{{ block.settings.image_background | image_url: width: block.settings.image_background.width }}" 
                            srcset="{{ block.settings.image_background | image_url: width: 2000 }} 2000w" 
                            width="{{ block.settings.image_background.width }}" height="{{ block.settings.image_background.height }}">     
                      {% else %}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      {% endif %} 
                    </div>
                    <div style="
                      background-image: url({{ block.settings.background_image_text | image_url: width: 2000 }});                    
                    " class="adv-contact-content">
                      <div style="color: {{ block.settings.color_text }}" class="adv-contact-text">{{ block.settings.text }}</div>
                      <div style="color: {{ block.settings.color_text_2 }}" class="adv-contact-text-2">{{ block.settings.text_2 }}</div>
                    </div>
                  </adv-contact>

                {%- when 'adv-logo' -%}
                  <div class="adv-logo">
                    <div class="adv-logo-wp">
                      <div class="adv-logo-svg">
                        {% if block.settings.img_logo != blank %}
                        <img loading="lazy" sizes="(max-width: 999px) 100vw, 72vw" alt=""
                          src="{{ block.settings.img_logo | image_url: width: block.settings.img_logo.width }}"
                          srcset="
                          { block.settings.img_logo | image_url: width: 2000 }} 2000w"
                          width="{{ block.settings.img_logo.width }}"
                          height="{{ block.settings.img_logo.height }}">
                        {% else %}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                        {% endif %}
                      </div>
                      <div class="adv-logo-img">
                        {% if  block.settings.image_background != blank %}
                          <img loading="lazy" 
                            sizes="(max-width: 999px) 100vw, 72vw" alt="" 
                            src="{{ block.settings.image_background | image_url: width: block.settings.image_background.width }}" 
                            srcset="
                            {{ block.settings.image_background | image_url: width: 2000 }} 2000w" 
                            width="{{ block.settings.image_background.width }}" height="{{ block.settings.image_background.height }}">     
                        {% else %}
                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                        {% endif %} 
                      </div>
                    </div>
                  </div>

              {% endcase %}
            </div>
          {% endfor %}
      </div>   
  </div>
</section>

{% schema %}
{
  "name": "t:sections.advanced-content.name",
  "class": "shopify-section--advanced-content",
  "tag": "section",
  "settings": [
    {
      "type": "select",
      "id": "setwidthout",
      "label": "Width Slideshow",
      "default": "full",
      "options": [
        {
          "value": "container",
          "label": "Box"
        },
        {
          "value": "container-fluid",
          "label": "Container Fluid"
        },
        {
          "value": "full",
          "label": "Full"
        }
      ]
    },
    {
      "type": "color",
      "id": "background-color",
      "default": "#ffffff",
      "label": "t:sections.all.background-color.label"
    },
    {
      "type": "color",
      "id": "primary_bg",
      "default": "#ffffff",
      "label": "Background color content"
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "#282828",
      "label": "t:sections.advanced-content.settings.heading_color.label"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#282828",
      "label": "t:sections.advanced-content.settings.text_color.label"
    },
    {
      "type": "text",
      "id": "tab_heading",
      "default": "Welcome to our store",
      "label": "t:sections.advanced-content.settings.tab_heading.label"
    },
    {
