<style>
  #no-comparedisplay{
    display: none;
  }
  #no-comparedisplay.active{
    display: block;
    text-align: center;
  }
  #ap-comparedisplay .ap-productlist__inner {
    grid-template-columns: repeat(4, 1fr);
    grid-auto-flow: row;
    gap: 30px 0;
  }
  .compare {
    margin: 60px 0; 
  }
  @media (max-width: 991px) {
    #ap-comparedisplay .ap-productlist__inner {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 576px) {
    #ap-comparedisplay .ap-productlist__inner {
      grid-template-columns: repeat(1, 1fr);
      padding: 0;
    }
  }

  .jdgm-prev-badge__text{
    visibility: visible;
  }
</style>

<div class="compare">
  <div class="container">
    <ap-comparedisplay id="ap-comparedisplay" section-id="{{ section.id }}" class="section section--flush">
      <div class="ap-productlist__inner ap-productlist__inner--scroller ap-productlist__inner--desktop-no-scroller hide-scrollbar">
        {%- for product in predictive_search.resources.products -%}
            {% render 'product-grid', product: product %}
        {% endfor %}
      </div>
    </ap-comparedisplay>
    
    <div id="no-comparedisplay">
      No has a√±adido productos para comparar.
    </div>
  </div>
</div>