{{ 'ap-logolist.css' | asset_url | stylesheet_tag }}
{% render 'section-style' %}

<style>
    #shopify-section-{{ section.id }} {
      --heading-color: {{ section.settings.heading_color | color_extract: 'red' }}, {{ section.settings.heading_color | color_extract: 'green' }}, {{ section.settings.heading_color | color_extract: 'blue' }};
      --color-body: {{ section.settings.text_color | color_extract: 'red' }}, {{ section.settings.text_color | color_extract: 'green' }}, {{ section.settings.text_color | color_extract: 'blue' }};
      --primary-button-background: 244, 165, 28;
      --primary-button-text-color: 255, 255, 255;
  
      --ap-nextap-buttonprev-background: 255, 255, 255;
      --ap-nextap-buttonprev-color: 40, 40, 40;

      --section-logo-background: 0 0 0 / 0.0;

      background-size:{{ section.settings.e_size }} !important;

      --background-color-gradient: {{ section.settings.bg_gradient }};
    }

    #shopify-section-{{ section.id }} {
      position: relative;
    }

    #shopify-section-{{ section.id }}::before {
      content: '';
      background-image: linear-gradient(180deg,var(--background-color-gradient) 0%,#00000000 100%);
      position: absolute;
      top: 0;
      width: 100%;
      height: 100%;
      opacity: 0.2;
    }

    @media screen and (max-width: 767px) {
      #shopify-section-{{ section.id }} {
        --section-items-per-row: 2;
      }
    }

    @media screen and (min-width: 768px) {
      #shopify-section-{{ section.id }} {
        --section-items-per-row: {{ section.settings.items_per_row_mobile }};
      }
    }
  
    @media screen and (min-width: 992px) {
      #shopify-section-{{ section.id }} {
        --section-items-per-row: {{ section.settings.items_per_row_tablet }}
      }
    }
  
    @media screen and (min-width: 1200px) {
      #shopify-section-{{ section.id }} {
        --section-items-per-row: {{ section.settings.desktop_1500 }};
      }
    }

    @media screen and (min-width: 1500px) {
      #shopify-section-{{ section.id }} {
        --section-items-per-row: {{ section.settings.items_per_row_desktop }};
      }
    }    

    .ap-logolist__item {
      background-color: {{ section.settings.background_color_item }};
    }
    /* .ap-logolist__item path {
      fill: {{ section.settings.color_icon }};
      transition: all .4s;
    }
    .ap-logolist__item:hover path {
      fill: {{ section.settings.color_icon_hover }};
    } */

    .text-bottom {
      position: relative;
      text-align: right;
      margin-top: 50px;
    }
    .text-bottom:before {
      content: '';
      position: absolute;
      top: 50%;
      left: 0;
      right: 0;
      height: 1px;
      width: 100%;
      background-color: rgb(var(--border-color));
      display: inline-block;
    }
    .text-bottom .btn-line {
      background-color: #fff;
      padding-left: 32px!important;
    }

    .border-logo .ap-logolist__list {
      border-width: 0 1px 1px;
      border-style: solid;
      border-color: rgb(var(--border-color));
      /* border-radius: 0 0 10px 10px; */
    }

    .border-logo .ap-logolist__item {
      padding: 26px 44px;
      border-right: 1px solid rgb(var(--border-color));
      border-bottom: 1px solid rgb(var(--border-color));
      height: 200px;
    }

    .border-logo .ap-logolist__item:last-child {
      border: none;
    }

    #shopify-section-{{ section.id }} .sp-heading {
      margin-bottom: 9px;
    }

  </style>
  
<section class="section section-logo {% if section.settings.show_newsletter %}{{ 'email-with-logo' | prepend: ' ' }}{% endif %}">
  <div class="{%- if section.settings.fullwidth -%}container-fluid{%- else -%}container{%- endif -%}">

      {% if section.settings.heading != blank or section.settings.heading_2 != blank %}
          <header class="section__header container text-container mb-30">
              {% if section.settings.heading != blank %}
                  <h2 style="color: {{ section.settings.color_subtitle }}" class="heading sp-heading {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
              {% endif %}
              {% if section.settings.heading_2 != blank %}
                  <h3 class="heading h{{ section.settings.heading_2_size_range }}">{{ section.settings.heading_2 }}</h3>
              {% endif %}
              {% if section.settings.description != blank %}
                  <div class="heading {{ section.settings.description_size }}">
                  {{ section.settings.description }}
                  </div>
              {% endif %} 
          </header>
      {% endif %}

      <div class="scroller">
        <div class="scroller__inner">
            <ap-logolist reveal-on-scroll="" class="ap-logolist ap-logolist--carousel ap-object-loaded {% if section.settings.hover_img %}hover-logo-img{% endif %} {% if section.settings.border_logo %}border-logo{% endif %}" style="opacity: 1;">
                <div class="ap-logolist__list">
                  {% for block in section.blocks %}
                    {% if block.settings.image != blank or block.settings.logo_svg != blank %}

                          <div class="ap-logolist__item">
                            {% if section.settings.show_image %}
                              <img loading="lazy" sizes="200px" class="ap-logolist__image"
                                alt="" 
                                src="{{ block.settings.image | image_url: block.settings.image.width }}" 
                                srcset="{{ block.settings.image | image_url: width: 200 }} 200w, {{ block.settings.image | image_url: width: 300 }} 300w, {{ block.settings.image | image_url: width: 400 }} 400w" 
                                width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}">
                            {% else %}

                            {% if block.settings.logo_svg != blank %}
                            <span>
                              {{ block.settings.logo_svg }}
                            </span>
                            {% endif %}

                            {% endif %}

                          </div>

                    {% else %}
                      <div class="ap-logolist__image">
                        {{ 'image' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
            </ap-logolist>
          </div>
      </div>

      {% if section.settings.btn_text != blank %}
      <bottom class="text-bottom d-block">
        <div class="btn-more">
          <a href="{{ section.settings.btn_link }}" class="button {{ section.settings.style_btn }}">
            {{ section.settings.btn_text }}
          </a>
        </div>
        </bottom>
      {% endif %}

      </div>
  </div>
</section>
  
  

