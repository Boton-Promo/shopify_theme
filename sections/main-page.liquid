<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .main-page-title {
    margin-bottom: 8px;
  }

  .title-page-content {
    color: #000;
    font-size: 2rem;
    text-align: center;
  }

  .main-content-page li a,
  .main-content-page a{
    display: block;
    word-wrap: break-word;
  }

  .main-content-page .table-wrapper tbody tr td{
    word-wrap: break-word;
  }

  {%- if template contains 'page' -%}
    .section-{{ section.id }}-padding {
      margin: {{ section.settings.margin_desktop }};
    }
    .breadcrumb__list {
      padding: 0;
    }
    .breadcrumb__link ,
    .breadcrumb__item+.breadcrumb__item:before {
      color: {{ section.settings.color_breadcrumb }};
    }
    .main-page-title {
      text-align: center;
    }
    .section-{{ section.id }}-padding .breadcrumb-wp {
      padding-top: {{ section.settings.padding_top | times: 1 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 1 | round: 0 }}px;
      {% if section.settings.bg_img != blank %}
        background-image: url({{ section.settings.bg_img | image_url: width: 2000 }});
        background-repeat: no-repeat;
      {% endif %}
      min-height: 160px;
      border-radius: 0;
      text-align: center;
      {% if section.settings.background_color != blank %}
        background-color: {{ section.settings.background_color }};
      {% endif %}
    }
    .main-content-page {
      padding-bottom: 60px;
    }
    .breadcrumb-wp {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    {%- if template contains 'page.pages-team' -%}
    
    {%- endif -%}

  {%- endif -%}

{%- endstyle -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <div class="{{ section.settings.setwidthout }}">
    <div class="breadcrumb-wp">
      <h1 style="color: {{ section.settings.color_title }}" class="main-page-title page-title h0">
        {{ page.title | escape }}
      </h1>
      {% render 'breadcrumb' %}
    </div>
  </div>
</div>

{% if page.content != blank %}
<div class="main-content-page">
  <div class="container">
    <div class="rte">
      {{ page.content }}
    </div>
  </div>
</div>
{% endif %}

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section section-page-title",
  "settings": [
    {
      "type": "select",
      "id": "setwidthout",
      "label": "Width Slideshow",
      "default": "full",
      "options": [
        {
          "value": "container",
          "label": "Box"
        },
        {
          "value": "container-fluid",
          "label": "Container Fluid"
        },
        {
          "value": "full",
          "label": "Full"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 110,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 35
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 110,
      "step": 5,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 35
    },
    {
      "type": "text",
      "id": "margin_desktop",
      "label": "t:sections.all.margin_desktop.label",
      "info": "t:sections.all.margin_desktop.info"
    },
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#282828"
    },
    {
      "type": "color",
      "id": "color_title",
      "label": "Color Breadcrumb Title",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "color_breadcrumb",
      "label": "Color Breadcrumb",
      "default": "#fff"
    }
  ]
}
{% endschema %}
