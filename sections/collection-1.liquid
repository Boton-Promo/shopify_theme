{{ 'collection-1.css' | asset_url | stylesheet_tag }}
{% render 'section-style' %}

{% style %}
  #shopify-section-{{ section.id }} {
    --heading-color-1: {{ section.settings.heading_color | color_extract: 'red' }}, {{ section.settings.heading_color | color_extract: 'green' }}, {{ section.settings.heading_color | color_extract: 'blue' }};
    --color-body: {{ section.settings.text_color | color_extract: 'red' }}, {{ section.settings.text_color | color_extract: 'green' }}, {{ section.settings.text_color | color_extract: 'blue' }};
    --ap-nextap-buttonprev-background: var(--color-body);
    --ap-nextap-buttonprev-color: var(--section-background);
    --section-background: {{ section.settings.section_background }};
    --section-collage-column: {{ section.settings.number_column }};
    --color-a: {{ section.settings.color_a }};
    --bg-color-a: {{ section.settings.bg_a }};
    --color-a-hover: {{ section.settings.color_a_hover }};
    --bg-color-a-hover: {{ section.settings.bg_a_hover }};
    --border-color: {{ section.settings.border_color }};
  }
  {% for block in section.blocks %}
    #block-{{ block.id }}-{{ forloop.index }} {
      --heading-color: {{ block.settings.heading_color | color_extract: 'red' }}, {{ block.settings.heading_color | color_extract: 'green' }}, {{ block.settings.heading_color | color_extract: 'blue' }};
      --section-block-overlay: {{ block.settings.overlay | color_extract: 'red' }}, {{ block.settings.overlay | color_extract: 'green' }}, {{ block.settings.overlay | color_extract: 'blue' }};
      --section-block-overlay-opacity: {{ block.settings.overlay_opacity | divided_by: 10.0 }};
    }
  {% endfor %}

  .collection-1 .section__header {
    padding-left: var(--container-distance);
    padding-right: var(--container-distance);
  }
{% endstyle %}

<section class="section section--flush collection-1">
  <div class="section__color-wrapper">
    <div class="vertical-breather">
      {% if section.settings.heading != blank %}
        <header class="section__header ">
          <div class="text-container">
            <h3 class="heading h{{ section.settings.heading_size_range }}">{{ section.settings.heading }}
            </h3>
          </div>
          {% if section.settings.tab_description != blank %}
          <div class="heading-description">
            {{ section.settings.tab_description }}
          </div>
          {% endif %}
          {% if section.settings.btn_text != blank %}
          <div class="btn-more mb-60 mt-20">
            <a href="{{ section.settings.btn_link }}" class="button {{ section.settings.style_btn }}">
              {{ section.settings.btn_text }}
            </a>
          </div>
          {% endif %}
        </header>
      {% endif %}
      
      <ap-collectionlist reveal-on-scroll="" class="list-collections list-collections--collage ap-object-loaded">
        <div class="{%- if section.settings.fullwidth -%}container-fluid{%- else -%}container{%- endif -%}">
          <div class="list-collections__item-list collection-1-content">
            {% for block in section.blocks %}
              {% liquid
                assign _link = block.settings.collection.url
                if block.settings.link != ''
                  assign _link = block.settings.link
                endif
              %}
              <div id="block-{{ block.id }}-{{ forloop.index }}" class="list-collections__item">  
                <a href="{{ _link }}" class="list-collections__item-link {% if block.settings.highlight %}list-collections__item--highlight{% endif %}  has-overlay collection-item-{{ forloop.index }}">
                  <div class="list-collections__item-image-wrapper">
                    {% if block.settings.featured_image != blank %}
                      <img class="list-collections__item-image" reveal="" loading="lazy" 
                        sizes="(max-width: 740px) 80vw, (max-width: 999px) 60vw, 425px"
                        alt="" 
                        src="{{ block.settings.featured_image | image_url: width: block.settings.featured_image.width }}" 
                        srcset="{%- if block.settings.featured_image.width >= 195 -%}{{ block.settings.featured_image | image_url: width: 195, crop: 'center' }} 195w,{%- endif -%}
                          {%- if block.settings.featured_image.width >= 330 -%}{{ block.settings.featured_image | image_url: width: 330, crop: 'center' }} 330w,{%- endif -%}
                          {%- if block.settings.featured_image.width >= 535 -%}{{ block.settings.featured_image | image_url: width: 535, crop: 'center' }} 535w,{%- endif -%}
                          {%- if block.settings.featured_image.width >= 750 -%}{{ block.settings.featured_image | image_url: width: 750, crop: 'center' }} 750w,{%- endif -%}
                          {%- if block.settings.featured_image.width >= 1000 -%}{{ block.settings.featured_image | image_url: width: 1000, crop: 'center' }} 1000w,{%- endif -%}
                          {%- if block.settings.featured_image.width >= 1500 -%}{{ block.settings.featured_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                          {%- if block.settings.featured_image.width >= 3000 -%}{{ block.settings.featured_image | image_url: width: 3000, crop: 'center' }} 3000w,{%- endif -%}
                          {{ block.settings.featured_image | image_url }} {{ block.settings.featured_image.width }}w"
                        src="{{ block.settings.featured_image | image_url: width: 1500 }}"
                        height="{{ block.settings.featured_image.height }}"
                        width="{{ block.settings.featured_image.width }}">
                    {% else %}
                      <div class="list-collections__item-image">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {% endif %}
                  </div>
                  <div class="list-collections__item-info text-container">
                    <div class="heading-top">
                      {% if block.settings.caption != blank %}
                        <div class="heading {{ block.settings.caption_size }} {% if block.settings.caption_large != blank %}caption_large{% endif %}" style="color: {{  block.settings.caption_color }}">
                          <span>
                            {{ block.settings.caption }}
                          </span>{{ block.settings.caption_large }}
                        </div>
                      {% endif %} 
                      {% if block.settings.heading != blank %}
                      <p class="heading h{{ block.settings.heading_size_range }}" reveal="">
                        <span>
                          {{- block.settings.heading -}}
                        </span>
                      </p>
                      {% else %}
                      {{- block.settings.collection.title | escape -}}</p>
                      {% endif %}
                      {% if block.settings.description != blank %}
                        <p style="color: {{ block.settings.color_description }}" class="description">
                          <span>
                            {{- block.settings.description -}}
                          </span>   
                        </p>
                      {% endif %}
                      {% if section.settings.show_count %}
                        <span class="heading count" reveal="">{{ block.settings.collection.products_count | append: ' ' | append: ' products' }}</span>
                      {% endif %}
                    </div>
                    {% if block.settings.heading_2 != blank %} 
                      <span class="heading {{ block.settings.heading_2_size }} link" reveal="">
                        <span class="btn-base-2">
                          {{ block.settings.heading_2 }}
                          {% render 'icon-arrow-2' %}
                        </span>
                      </span>
                    {% endif %}

                  </div>
                </a>
              </div>
            {% endfor %}
          </div>
        </div>
      </ap-collectionlist>
    </div>
  </div>
</section>

