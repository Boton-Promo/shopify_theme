{{ 'announcement-bar.css' | asset_url | stylesheet_tag }}

{% assign number_block = section.blocks | size %}
{% if number_block > 0 %}
<style>
  :root {
    --enable-sticky-ap-announcementbar: {% if section.settings.enable_sticky %}1{% else %}0{% endif %};
  }

  #shopify-section-announcement-bar {
    --heading-color: {{ section.settings.heading_color | color_extract: 'red' }}, {{ section.settings.heading_color | color_extract: 'green' }}, {{ section.settings.heading_color | color_extract: 'blue' }};
    --color-body: {{ section.settings.text_color | color_extract: 'red' }}, {{ section.settings.text_color | color_extract: 'green' }}, {{ section.settings.text_color | color_extract: 'blue' }};
    --primary-button-background: {{ section.settings.button_background | color_extract: 'red' }}, {{ section.settings.button_background | color_extract: 'green' }}, {{ section.settings.button_background | color_extract: 'blue' }};
    --primary-button-text-color: {{ section.settings.button_text_color | color_extract: 'red' }}, {{ section.settings.button_text_color | color_extract: 'green' }}, {{ section.settings.button_text_color | color_extract: 'blue' }};
    --section-background: {{ section.settings.background | color_extract: 'red' }}, {{ section.settings.background | color_extract: 'green' }}, {{ section.settings.background | color_extract: 'blue' }};
    z-index: {{ section.settings.z_index }};
    position: relative;
    top: {{ section.settings.top }};
    background: linear-gradient(90deg, #9B04DB 0%, #FF1C6A 49.48%, #6D1DC6 100%);

    border-bottom: 1px solid rgb(var(--border-color));
  }

  .ap-announcementbar__message {
    /* letter-spacing: 3px; */
    font-size: 16px;
    line-height: 26px;
    font-weight: 500;
    justify-content: center;
  }

  .ap-announcementbar__message a {
    color: var(--primary);
    text-decoration: underline;
  }

  .ap-announcementbar__message a:hover {
    color: var(--primary_hover);
  }

  .ap-announcementbar__message a:before {
    content: '';
    padding-left: 13px;
    margin-left: 5px;
    border-left: 1px solid var(--color-accent-6);
  }

  @media screen and (min-width: 741px) {
    :root {
      --enable-sticky-ap-announcementbar: {% if section.settings.enable_sticky %}1{% else %}0{% endif %};
    }
    #shopify-section-announcement-bar {position: relative;}
  }
  @media (max-width: 480px) {
    .ap-announcementbar__message .link {
      display: none;
    }   
  }
</style>

<section>
    <ap-announcementbar {% if section.settings.show_btn %}auto-play=""{% endif %} cycle-speed="5" class="ap-announcementbar ap-announcementbar--multiple {% if section.settings.transparent %} announcement-transparent{% endif %}">

    <div class="{%- if section.settings.fullwidth -%}container-fluid{%- else -%}container{%- endif -%}">
      {% if section.settings.show_btn %}
      <button data-action="prev" class="tap-area tap-area--large btn-prev">
          <span class="visually-hidden">Previous</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="7" height="11" viewBox="0 0 7 11" fill="none">
            <path
              d="M7 1.65288L3.23394 5.5L7 9.34712L5.38227 11L-2.36425e-07 5.5L5.38227 -7.07132e-08L7 1.65288Z"
              fill="white" />
          </svg>
      </button>
      {% endif %}

      <div class="announcement-row">

          {%- for block in section.blocks -%}
            {%- case block.settings.width -%}
            {%- when '20%' -%}
            {%- assign block_width = 'col-xl-20 col-lg-33 col-md-33 col-100' -%}
            {%- when '25%' -%}
            {%- assign block_width = 'col-xl-25 col-md-50 col-100' -%}
            {%- when '33%' -%}
            {%- assign block_width = 'col-xl-33 col-md-50 col-100' -%}
            {%- when '50%' -%}
            {%- assign block_width = 'col-xl-50 col-md-50 col-100' -%}
            {%- when '66%' -%}
            {%- assign block_width = 'col-xl-66 col-md-50 col-100' -%}
            {%- when '75%' -%}
            {%- assign block_width = 'col-xl-75 col-md-50 col-100' -%}
            {%- when '80%' -%}
            {%- assign block_width = 'col-lg-80 col-md-66 col-sm-50 col-100' -%}
            {%- when '100%' -%}
            {%- assign block_width = 'col-100' -%}
            {%- endcase -%}
            <div id="block-{{ block.id }}" class="{{ block_width }}">

              {%- case block.type -%}
  
                {%- when 'announcement' -%}
                  <ap-announcementbar-item has-content="" class="ap-announcementbar__item text-{{ block.settings.text_align }}">
                    <div class="ap-announcementbar__message heading h6 fs-d2">
                      {{ block.settings.text | escape }}
                      {% if block.settings.view_more != blank %}
                      <a class="uppercase" href="{{ block.settings.link_view }}" class="link" data-action="open-content">{{
                        block.settings.view_more | escape }}</a>
                      {% endif %}
                      {% render 'collection-countdown' , settings: block.settings %}
                    </div>
                    <div class="ap-announcementbar__content has-image" hidden="">
                      <div class="ap-announcementbar__content-overlay"></div>
                      <div class="ap-announcementbar__content-overflow">
                        <div class="ap-announcementbar__content-inner">
                          <button type="button" class="announcement-bar__close-button tap-area"
                            data-action="close-content">
                            <span class="visually-hidden">Close</span>
                            <svg focusable="false" width="14" height="14" class="icon icon--close   "
                              viewBox="0 0 14 14">
                              <path d="M13 13L1 1M13 1L1 13" stroke="currentColor" stroke-width="2" fill="none">
                              </path>
                            </svg>
                          </button>
                          <img class="ap-announcementbar__content-image" loading="lazy" sizes="50vw" alt=""
                            loading="lazy" src="{{ block.settings.image | image_url: width: 1400 }}"
                            srcset="{{ block.settings.image | image_url: width: 400 }} 400w, {{ block.settings.image | image_url: width: 500 }} 500w, {{ block.settings.image | image_url: width: 600 }} 600w, {{ block.settings.image | image_url: width: 700 }} 700w, {{ block.settings.image | image_url: width: 800 }} 800w, {{ block.settings.image | image_url: width: 900 }} 900w, {{ block.settings.image | image_url: width: 1000 }} 1000w, {{ block.settings.image | image_url: width: 1200 }} 1200w, {{ block.settings.image | image_url: width: 1400 }} 1400w"
                            width="1400" height="800">
                          <div class="ap-announcementbar__content-text-wrapper">
                            <div class="ap-announcementbar__content-text text-container">
                              <h3 class="heading {{ block.settings.heading_text_size | escape }}">{{
                                block.settings.heading_text | escape }}</h3>
                              <p>{{ block.settings.description | escape }}</p>
                              <div class="button-wrapper">
                                <a href="{{ block.settings.link | escape }}" class="button button--primary">{{
                                  block.settings.read_more | escape }}</a>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </ap-announcementbar-item>
  
                {%- when 'announcement-social' -%}
                  <div class="announcement-social text-{{ block.settings.text_align }}">
                    {% liquid
                      assign _show_social = false
                      if block.settings.social_facebook != blank
                        assign _show_social = true
                      endif
                      if block.settings.social_instagram != blank
                        assign _show_social = true
                      endif
                      if block.settings.social_pinterest != blank
                        assign _show_social = true
                      endif
                      if block.settings.social_youtube != blank
                        assign _show_social = true
                      endif
                      if block.settings.social_linkedin != blank
                        assign _show_social = true
                      endif
                    %}
                    {%- if _show_social == true -%}
