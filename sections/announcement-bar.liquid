                      </div>
                    {%- endif -%}
                  </div>

                {%- when 'announcement-language' -%}
                  <div class="announcement-language text-{{ block.settings.text_align }}">
                    {% render "localization" %}
                  </div>
  
                {%- when 'announcement-link' -%}
                  {%- if block.settings.menu != blank -%}
                  <ul class="announcemnt-menu text-{{ block.settings.text_align }}" role="list">
                    {%- for link in block.settings.menu.links -%}
                    <li class="announcemnt-menu__item">
                      <a href="{{ link.url }}" class="announcemnt-menu__link">{{ link.title | escape }}</a>
                    </li>
                    {% endfor %}
                  </ul>
                  {% endif %}
  
                {%- when 'announcement-contact' -%}
                  <div class="announcement-contact text-{{ block.settings.text_align }}">
                    <div class="announcement-contact-list">
                      {% if block.settings.announcement_text != blank %}
                      <a class="content-link-1" href="{{ block.settings.btn_link_1 | default: '#' }}"
                        title="{{ block.settings.announcement_text }}">
                        {{ block.settings.announcement_text }}
                      </a>
                      {% endif %}
                      {% if block.settings.announcement_text_2 != blank %}
                      <a class="content-link-2" href="{{ block.settings.btn_link_2 | default: '#' }}"
                        title="{{ block.settings.announcement_text_2 }}">
                        {{ block.settings.announcement_text_2 }}
                      </a>
                      {% endif %}
                      {% if block.settings.announcement_text_3 != blank %}
                      <a class="content-link-3" href="{{ block.settings.btn_link_3 | default: '#' }}"
                        title="{{ block.settings.announcement_text_3 }}">
                        {{ block.settings.announcement_text_3 }}
                      </a>
                      {% endif %}
                    </div>
                  </div>
  
              {%- endcase -%}

            </div>
          {%- endfor -%}
        
      </div>

      {% if section.settings.show_btn %}
      <button data-action="next" class="tap-area tap-area--large btn-next">
          <span class="visually-hidden">Next</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="7" height="11" viewBox="0 0 7 11" fill="none">
            <path
              d="M-4.08575e-07 1.65288L3.76606 5.5L-7.22498e-08 9.34712L1.61773 11L7 5.5L1.61773 -7.07132e-08L-4.08575e-07 1.65288Z"
              fill="white" />
          </svg>
      </button>
      {% endif %}
    </div>

    </ap-announcementbar>
</section>

<script>
  document.documentElement.style.setProperty('--ap-announcementbar-height', document.getElementById('shopify-section-announcement-bar').clientHeight + 'px');
</script>


{% endif %}

{% schema %}
{
  "name": "t:sections.ap-announcementbar.name",
  "class": "shopify-section--ap-announcementbar",
  "max_blocks": 12,
  "settings": [
    {
      "type": "checkbox",
      "id": "fullwidth",
      "default": false,
      "label": "t:sections.ap-announcementbar.settings.fullwidth.label"
    },
    {
      "type": "checkbox",
      "id": "transparent",
      "default": false,
      "label": "Show Transparent"
    },
    {
      "type": "checkbox",
