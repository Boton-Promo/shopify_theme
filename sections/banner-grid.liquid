{{ 'banner-grid.css' | asset_url | stylesheet_tag }}
{% render 'section-style' %}

<style>
  #shopify-section-{{ section.id }} {
    --heading-color: {{ section.settings.heading_color | color_extract: 'red' }}, {{ section.settings.heading_color | color_extract: 'green' }}, {{ section.settings.heading_color | color_extract: 'blue' }};
  }
  #shopify-section-{{ section.id }} .banner-image:before {
    content: '';
    background-color: rgba(0,0,0,.3);
    display: inline-block;
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: all .4s;
    z-index: 0;
  }
  #shopify-section-{{ section.id }} .banner-image {
    position: relative;
    overflow: hidden;
    border-radius: 10px;
  }
  #shopify-section-{{ section.id }} .banner-content:hover .banner-image:before {
    opacity: 1;
  }
  #shopify-section-{{ section.id }} .banner-content:hover img.banner-list-image {
    transform: scale(1.1);
  }
  #shopify-section-{{ section.id }} .heading-center.h3 {
    line-height: 1;
    margin: 0 0 13px;
    text-transform: uppercase;
    font-size: calc(var(--h3-font-size) - 2px);
  }
  #shopify-section-{{ section.id }} .banner-grid .row {
    gap: 10px 0;
    margin: 0 -5px;
  }
  #shopify-section-{{ section.id }} .row > div {
    padding: 0 5px;
  }
  @media (max-width: 1199px) {
    #shopify-section-{{ section.id }} .heading-center.h3 {
      margin-bottom: 15px;
    }
  }
</style>

<div class="banner-grid">
    <div class="{{ section.settings.setwidthout }}">
      {% if section.settings.tab_heading != blank %}
      <header class="section__header text-{{ section.settings.text_align }} mb-60">
        <h3 class="heading h{{ section.settings.tab_heading_size }}">{{ section.settings.tab_heading
          }}</h3>
        {% if section.settings.tab_description != blank %}
        <div class="heading-description">
          {{ section.settings.tab_description }}
        </div>
        {% endif %}
        {% if section.settings.btn_text != blank %}
        <div class="btn-more">
          <a href="{{ section.settings.btn_link }}" class="button {{ section.settings.style_btn }}">
            {{ section.settings.btn_text }}
          </a>
        </div>
        {% endif %}
      </header>
      {% endif %}
        <div class="row">
            {% for block in section.blocks %}
                {%- case block.settings.width -%}
                {%- when '25%' -%}
                {%- assign block_width = 'col-lg-25 col-md-25 col-100' -%}
                {%- when '33%' -%}
                {%- assign block_width = 'col-xl-33 col-md-50 col-100' -%}
                {%- when '30%' -%}
                {%- assign block_width = 'col-lg-30 col-md-50 col-100' -%}
                {%- when '40%' -%}
                {%- assign block_width = 'col-xl-40 col-md-50 col-100' -%}
                {%- when '45%' -%}
                {%- assign block_width = 'col-lg-45 col-md-50 col-100' -%}
                {%- when '50%' -%}
                {%- assign block_width = 'col-xl-50 col-md-50 col-100 banner-col' -%}
                {%- when '60%' -%}
                {%- assign block_width = 'col-xl-60 col-md-50 col-100' -%}
                {%- when '66%' -%}
                {%- assign block_width = 'col-xl-66 col-md-50 col-100' -%}
                {%- when '75%' -%}
                {%- assign block_width = 'col-xl-75 col-md-50 col-100' -%}
                {%- when '100%' -%}
                {%- assign block_width = 'col-100 col-full' -%}
                {%- endcase -%}
                <div id="block-{{ block.id }}" class="{{ block_width }} banner-col-{{ forloop.index }}">
                    <banner-content reveal-on-scroll="">
                        <div class="banner-content has-overlay {% if block.settings.text_bottom %}banner-content-bottom{% endif %}">
                            <div class="banner-image">
                                {% if block.settings.featured_image != blank %}
                                    <img class="banner-list-image" reveal="" loading="lazy" 
                                    sizes="(max-width: 740px) 80vw, (max-width: 999px) 60vw, 425px"
                                    alt="" 
                                    src="{{ block.settings.featured_image | image_url: width: block.settings.featured_image.width }}" 
                                    srcset="{%- if block.settings.featured_image.width >= 3000 -%}{{ block.settings.featured_image | image_url: width: 3000, crop: 'center' }} 3000w,{%- endif -%}
                                        {{ block.settings.featured_image | image_url }} {{ block.settings.featured_image.width }}w"
                                    src="{{ block.settings.featured_image | image_url: width: 1500 }}"
                                    height="{{ block.settings.featured_image.height }}"
                                    width="{{ block.settings.featured_image.width }}">
                                {% else %}
                                    <div class="banner-list-image">
                                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                    </div>
                                {% endif %}
                            </div>
                            <div 
                            style="
                            background-color: {{ block.settings.background_color }};
                            {% if block.settings.background_image != blank %}
                            background-image: url({{ block.settings.background_image | image_url: width: 2000 }});
                            {% endif %}
                            " 
                            class="banner-text text-{{ block.settings.text_align }}">

                                {% if block.settings.image_child != blank %}
                                <div class="banner-image-child">
                                  <img class="image-child" loading="lazy" reveal=""
                                    sizes="(max-width: 740px) 80vw, (max-width: 999px) 60vw, 425px" alt=""
                                    src="{{ block.settings.image_child | image_url: width: block.settings.image_child.width }}"
                                    srcset="{%- if block.settings.image_child.width >= 3000 -%}{{ block.settings.image_child | image_url: width: 3000, crop: 'center' }} 3000w,{%- endif -%}
                                                                    {{ block.settings.image_child | image_url }} {{ block.settings.image_child.width }}w"
                                    src="{{ block.settings.image_child | image_url: width: 1500 }}"
                                    height="{{ block.settings.image_child.height }}" width="{{ block.settings.image_child.width }}">
                                </div>
                                {% endif %}

                                {% if block.settings.heading_title != blank %}
                                <h3 style="color: {{ block.settings.color_title }}" class="heading heading-title {{ block.settings.heading_size }}" reveal="">
                                  {{- block.settings.heading_title -}}
                                </h3>
                                {% endif %}
                                
                                {% if block.settings.heading != blank %}
                                <h2 style="color: {{ block.settings.color_title_center }}" class="heading heading-center {{ block.settings.heading_size_2 }}" reveal="">
                                    <span>
                                        {{- block.settings.heading -}}
                                    </span>
                                </h2>
                                {% endif %}   
       
                                {% if block.settings.description != blank %}
                                <p style="color: {{ block.settings.color_description }}" class="heading description" reveal="">
                                    <span>
                                      {{- block.settings.description -}}
                                    </span>   
                                    <span>
                                      {{- block.settings.description_2 -}}
                                    </span>
                                </p>
                                {% endif %}
                                
                                <div class="wrapper-button">
                                  <style>
                                    #block-{{ block.id }} a.button.btn-base, 
                                    #block-{{ block.id }} .btn-outline, 
                                    #block-{{ block.id }} .btn-line ,
                                    #block-{{ block.id }} .btn-line-black ,
                                    #block-{{ block.id }} .btn-base {
                                      color: {{ block.settings.color_btn }};
                                      background-color: {{ block.settings.bg_btn }};
                                      text-decoration: none;
                                      border-color: {{ block.settings.color_btn }};
                                    }
                                    #block-{{ block.id }} a.button.btn-base path , 
                                    #block-{{ block.id }} .btn-outline path , 
                                    #block-{{ block.id }} .btn-base path {
                                      fill: {{ block.settings.color_btn }};
                                    }
                                    #block-{{ block.id }} a.button.btn-base:hover,
                                    #block-{{ block.id }} .btn-outline:hover, 
                                    #block-{{ block.id }} .btn-line:hover ,
                                    #block-{{ block.id }} .btn-line-black:hover ,
                                    #block-{{ block.id }} .btn-base:hover {
                                      color: {{ block.settings.color_btn_hover }};
                                      background-color: {{ block.settings.bg_btn_hover }};
                                      border-color: {{ block.settings.color_btn_hover }};
                                    }
                                    #block-{{ block.id }} a.button.btn-base:hover path , 
                                    #block-{{ block.id }} .btn-outline:hover path , 
                                    #block-{{ block.id }} .btn-base:hover path {
                                      fill: {{ block.settings.color_btn_hover }};
                                    }
                                  </style>
                                  {% if block.settings.button1_label != blank %}
                                  <a href="{{ block.settings.link1 }}" reveal="" class="button {{ block.settings.style_btn }} btn-sm">
                                      {{ block.settings.button1_label }}
                                      {% render 'icon-arrow-2' %}
                                  </a>
                                  {% endif %}
                                  {% if block.settings.button2_label != blank %}
                                  <a href="{{ block.settings.link2 }}" reveal="" class="button {{ block.settings.style_btn_2 }}">
                                      {{ block.settings.button2_label }}
                                      {% render 'icon-arrow-2' %}
                                  </a>
                                  {% endif %}
                                </div>
    
                            </div>
                        </div>
                    </banner-content>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

