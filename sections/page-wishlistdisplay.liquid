<style>
  .wishlist{
    margin: 60px 0;
  }
  #no-wishlistdisplay{
    display: none;
  }
  #no-wishlistdisplay.active{
    display: block;
    text-align: center;
  }
  #ap-wishlistdisplay .ap-productlist__inner {
    grid-template-columns: repeat(4, 1fr);
    grid-auto-flow: row;
    gap: 30px 0;
  }
  .wishlist {
    padding-bottom: 60px;
  }
  @media (max-width: 991px) {
    #ap-wishlistdisplay .ap-productlist__inner {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 576px) {
    #ap-wishlistdisplay .ap-productlist__inner {
      grid-template-columns: repeat(1, 1fr);
      padding: 0;
    }
  }
  .jdgm-prev-badge__text{
    visibility: visible;
  }
</style>

<div class="wishlist">
  <div class="container">
    <ap-wishlistdisplay id="ap-wishlistdisplay" section-id="{{ section.id }}" class="section section--flush">
      <div class="ap-productlist__inner ap-productlist__inner--scroller ap-productlist__inner--desktop-no-scroller hide-scrollbar">
        {%- for product in predictive_search.resources.products -%}
            {% render 'product-grid', product: product %}
        {% endfor %}
      </div>
    </ap-wishlistdisplay>
    
    <div id="no-wishlistdisplay">
      No tienes productos en la lista de deseos.
    </div>
  </div>
</div>